{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "ignorePaths": [],
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "semanticCommitScope": "deps",
  "schedule": ["at any time"],
  "rebaseWhen": "conflicted",
  "labels": ["dependencies", "renovate"],
  "prHourlyLimit": 100,
  "recreateClosed": true,
  "separateMajorMinor" : true,
  "enabledManagers": ["terraform", "terraform-version"],
  "terraform": {
    "enabled": true,
    "pinDigests": false,
    "rangeStrategy": "replace"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["at any time"],
    "additionalBranchPrefix": "tf-lock-file-maintenance-",
    "commitMessageAction": "regenerate",
    "commitMessageTopic": "terraform lock files",
    "semanticCommitType": "chore",
    "semanticCommitScope": "terraform",
    "labels": ["dependencies", "renovate", "terraform", "lock-file-maintenance"]
  }
}